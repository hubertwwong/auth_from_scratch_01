<% if current_user %>
	Logged in as :
	<%= current_user.email %>
	<br/>
	<%= link_to "log off", logout_path %>
<% else %>
	<%= form_tag sessions_path do %>
	  <div class="field">
	    <%= label_tag :email %>
	    <%= text_field_tag :email, params[:email] %>
	  </div>
	  <div class="field">
	    <%= label_tag :password %>
	    <%= password_field_tag :password %>
	  </div>
	  <div class="actions"><%= submit_tag "Log in" %></div>
	<% end %>
<% end %>